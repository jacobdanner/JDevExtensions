   <upc:update id="com.jacobd.j1.groovy.installer">
    <name>Groovy Installing Extension</name>
    <version>1.0.0</version>
    <category-id>Groovy</category-id>
    <category>Groovy</category>
    <author>Jacob Danner</author>
    <author-url>https://github.com/jacobdanner</author-url>
    <description>
    Until its natively available, this extension installs Groovy 2.1.7 to the extension directory
   </description>
   <requirements>
      <requires-extension id="oracle.jdeveloper" minVersion="12.1.2.0.0"/>      
      <requires-extension id="oracle.ide.webupdate" minVersion="12.1.2.0.0"/>
      <requires-extension id="oracle.ide.webbrowser" minVersion="12.1.2.0.0"/>
    </requirements>
    <bundle-url>https://github.com/jacobdanner/JDevGithub_J1Ext/raw/master/GroovyInstallerExt/deploy/groovyInstallerBundle.zip</bundle-url>
    <post-startup-hook>com.jacobd.j1.groovy.installer.GroovyInstaller</post-startup-hook>
    </upc:update>
    
